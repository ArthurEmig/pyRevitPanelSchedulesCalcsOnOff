<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Select Operation" Height="300" Width="500">
    <Grid Margin="16,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="2*"/>
            <RowDefinition  Height="2*"/>
            <RowDefinition  Height="2*"/>
        </Grid.RowDefinitions>

        <Label x:Name="label_first_panel_schedule_template" Content="1st Panel Schedule Template" HorizontalAlignment="Left" VerticalAlignment="Center" Height="35" Width="130" Margin="8,0,0,0" Grid.Row="0"/>
        <ComboBox SelectionChanged="comboBoxFirstPanelScheduleTemplate_SelectionChanged" x:Name="combo_first_panel_schedule_template" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" IsEditable="True" IsSynchronizedWithCurrentItem="True" Height="22" HorizontalAlignment="Left" Width="285" />

        <Label x:Name="label_second_panel_schedule_template" Content="2nd Panel Schedule Template" HorizontalAlignment="Left" VerticalAlignment="Center" Height="35" Width="130" Grid.Row="1" Margin="8,0,0,0"/>
        <ComboBox SelectionChanged="comboBoxSecondPanelScheduleTemplate_SelectionChanged" x:Name="combo_second_panel_schedule_template" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" IsEditable="True" IsSynchronizedWithCurrentItem="True" Height="22" HorizontalAlignment="Left" Width="285" />

        <Button x:Name="btn_ok" Click="btn_ok_clicked" HorizontalAlignment="Left" VerticalAlignment="Top" Content="OK" Padding="30,5,30,5" Margin="0,16,0,0" Grid.Column="1" Grid.Row="2" Height="28" Width="78" />

    </Grid>
</Window>
